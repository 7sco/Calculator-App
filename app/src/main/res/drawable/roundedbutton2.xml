<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <!-- Set the border color of your layout here -->
            <stroke android:width="0.2dp" android:color="#b7b7b7" />
            <solid android:color="#b7b7b7" />

        </shape>
    </item>

    <!-- This is for border bottom but
    you can change this according to your need -->
    <item android:right="0.1dp" >
        <shape
            android:shape="rectangle">
            <!-- Set the background color of your layout here -->
            <stroke android:width="0.08dp" android:color="#b7b7b7" />
            <solid android:color="@color/numbers_background" />
        </shape>
    </item>

</layer-list>